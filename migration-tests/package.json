{
  "name": "pokemon-frontend-migration-tests",
  "version": "1.0.0",
  "description": "Regression test suite for Pokemon frontend migration",
  "scripts": {
    "test:old": "TEST_TARGET=old playwright test --config=config/playwright.config.ts",
    "test:new": "TEST_TARGET=new playwright test --config=config/playwright.config.ts",
    "test:compare": "npm run test:old && npm run test:new && node scripts/compare-results.js",
    "test:critical": "TEST_TARGET=old playwright test critical-journeys --config=config/playwright.config.ts",
    "test:visual": "TEST_TARGET=old playwright test visual-regression --config=config/playwright.config.ts",
    "test:api": "TEST_TARGET=old playwright test api-contracts --config=config/playwright.config.ts",
    "show:report:old": "playwright show-report reports/old-html",
    "show:report:new": "playwright show-report reports/new-html",
    "clean": "rm -rf reports test-results videos",
    "install:playwright": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^20.19.10",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "migration",
    "testing",
    "regression",
    "playwright",
    "pokemon"
  ],
  "author": "Pokemon Collection Team",
  "license": "MIT"
}
