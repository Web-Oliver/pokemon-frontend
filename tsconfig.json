{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      // UNIFIED ABSOLUTE IMPORTS SYSTEM
      // Phase 2.1: Enhanced path mapping for systematic migration
      "@/*": ["./src/*"],
      
      // UI COMPONENT PATHS
      "@/ui/*": ["./src/shared/ui/*"],
      "@/components/*": ["./src/shared/components/*"],
      
      // THEME & DESIGN SYSTEM PATHS
      "@/theme/*": ["./src/theme/*"],
      "@/styles/*": ["./src/styles/*"],
      
      // DOMAIN MODULE PATHS (NEW ARCHITECTURE)
      "@/domains/*": ["./src/domains/*"],
      "@/domains/collection/*": ["./src/domains/collection/*"],
      "@/domains/pokemon/*": ["./src/domains/pokemon/*"],
      "@/domains/icr/*": ["./src/domains/icr/*"],
      "@/domains/marketplace/*": ["./src/domains/marketplace/*"],
      "@/domains/search/*": ["./src/domains/search/*"],
      "@/domains/system/*": ["./src/domains/system/*"],
      
      // LEGACY FEATURE MODULE PATHS (TO BE MIGRATED)
      "@/features/*": ["./src/features/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/shared/services/*"],
      "@/utils/*": ["./src/shared/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/lib/*": ["./src/lib/*"],
      
      // API & DATA PATHS
      "@/api/*": ["./src/shared/api/*"],
      "@/contexts/*": ["./src/contexts/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src/**/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
