{
  "name": "pokemon-collection-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:with-typecheck": "tsc && vite build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer dist/assets/*.js",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "react-devtools": "react-devtools",
    "dev:full": "npm run react-devtools & npm run dev",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:test": "test-storybook",
    "storybook:test:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && npm run storybook:test\"",
    "test:visual": "npm run storybook:test:ci",
    "chromatic": "chromatic --config-file=chromatic.config.json",
    "chromatic:ci": "chromatic --config-file=chromatic.config.json --exit-once-uploaded",
    "validate:bundle": "node scripts/bundle-size-monitor.js",
    "validate:bundle:baseline": "node scripts/bundle-size-monitor.js baseline",
    "validate:a11y": "node scripts/accessibility-checker.js",
    "validate:storybook": "node scripts/storybook-validator.js",
    "validate:storybook:generate": "node scripts/storybook-validator.js --generate-templates",
    "validate:storybook:create": "node scripts/storybook-validator.js --create-files",
    "validate:theme": "eslint . --config .eslintrc-theme-rules.js",
    "validate:all": "npm run validate:theme && npm run validate:storybook && npm run validate:bundle && npm run validate:a11y",
    "pre-commit": "npm run lint && npm run type-check && npm run validate:theme",
    "pre-push": "npm run test:run && npm run validate:all",
    "ci:checks": "npm run lint && npm run type-check && npm run test:run && npm run validate:all"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.84.0",
    "@tanstack/react-query-devtools": "^5.84.0",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.12",
    "jszip": "^3.10.1",
    "lucide-react": "^0.535.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.7.1",
    "react-scan": "^0.4.3",
    "tailwind-merge": "^3.3.1",
    "typescript-eslint": "^8.39.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@eslint/js": "^9.31.0",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-backgrounds": "^9.0.8",
    "@storybook/addon-controls": "^9.0.8",
    "@storybook/addon-coverage": "^2.0.0",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-viewport": "^9.0.8",
    "@storybook/react-vite": "^9.1.2",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "autoprefixer": "^10.4.20",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "chromatic": "^13.1.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-sonarjs": "^3.0.4",
    "globals": "^16.3.0",
    "jscpd": "^4.0.5",
    "jsdom": "^26.0.0",
    "madge": "^8.0.0",
    "plato": "^1.7.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "react-devtools": "^6.1.5",
    "rollup-plugin-visualizer": "^6.0.3",
    "storybook": "^9.1.2",
    "tailwindcss": "^3.4.15",
    "ts-prune": "^0.10.3",
    "typescript": "^5.8.3",
    "vite": "^5.2.0",
    "vitest": "^3.0.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
